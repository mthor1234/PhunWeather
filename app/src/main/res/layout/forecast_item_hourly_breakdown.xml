<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_hourlybreakdown_weathericon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sun_64"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_hourlybreakdown_mintemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_hourlybreakdown_weathericon"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:text="67F"/>

        <TextView
            android:id="@+id/tv_hourlybreakdown_maxtemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/tv_hourlybreakdown_mintemp"
            android:text="72F"/>

        <TextView
            android:id="@+id/tv_hourlybreakdown_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/tv_hourlybreakdown_maxtemp"
            android:text="3am"/>

    </RelativeLayout>
